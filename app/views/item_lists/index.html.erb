<p id="notice"><%= notice %></p>

<h1>Item Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Expected cost</th>
      <th>Image</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_lists.each do |item_list| %>
      <tr>
        <td><%= item_list.title %></td>
        <td><%= item_list.description %></td>
        <td><%= item_list.expected_cost %></td>
        <td><%= image_tag item_list.image_url(:thumb) %></td>
        <td><%= item_list.contact %></td>
        <td><%= link_to 'Show', item_list %></td>
        <%  if item_list.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_item_list_path(item_list) %></td>
        <td><%= link_to 'Destroy', item_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item List', new_item_list_path %>
